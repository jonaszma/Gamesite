    <div id="pagination">
        <% if (currentPage > 1) { %>
            <a href="/wydawnictwo?page=<%= currentPage - 1 %>">&laquo; Poprzednia</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/wydawnictwo?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>">
                <%= i %>
            </a>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="/wydawnictwo?page=<%= currentPage + 1 %>">NastÄ™pna &raquo;</a>
        <% } %>
    </div>



</form>

